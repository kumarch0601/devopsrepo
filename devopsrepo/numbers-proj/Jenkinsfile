pipeline {
    agent any

    tools {
        maven "Maven"
        jdk "openjdk-14"
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn clean compile package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
    }
}